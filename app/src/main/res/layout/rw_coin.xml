<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/twotone_android_24" />

    <TextView
        android:id="@+id/tw_coinName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="coin name"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <TextView
        android:id="@+id/tw_coinPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="11.111"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@+id/tw_coinName"
        app:layout_constraintTop_toBottomOf="@+id/tw_coinName" />

    <TextView
        android:id="@+id/tw_CurrentPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:text="70.000"
        app:layout_constraintStart_toEndOf="@+id/tw_coinName"
        app:layout_constraintTop_toTopOf="@+id/tw_coinName" />

    <TextView
        android:id="@+id/tw_priceChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:text="%3"
        app:layout_constraintStart_toEndOf="@+id/tw_CurrentPrice"
        app:layout_constraintTop_toTopOf="@+id/tw_CurrentPrice" />
</androidx.constraintlayout.widget.ConstraintLayout>